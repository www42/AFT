{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "VNET1"
        },
        "networkSecurityGroupName": {
            "type": "string",
            "defaultValue": "NSG1"
        },
        "subnetNames": {
            "type": "array",
            "defaultValue": [
                "subnet1-192er",
                "subnet2-172er",
                "subnet3-10er"
            ]
        },
        "subnetAddressPrefixes": {
            "type": "array",
            "defaultValue": [
                "192.168.0.0/24",
                "172.16.0.0/24",
                "10.10.0.0/24"
            ]
        },
        "virtualMachineNames": {
            "type": "array",
            "defaultValue": [
                "VM1",
                "VM2",
                "VM3"
            ]
        }
    },
    "functions": [],
    "variables": {
        "subnetCount": "[length(parameters('subnetNames'))]",
        "virtualMachineCount": "[length(parameters('virtualMachineNames'))]",
        "copy": [
            {
                "name": "networkInterfaceNames",
                "count": "[variables('virtualMachineCount')]",
                "input": "[concat( parameters('virtualMachineNames')[copyIndex('networkInterfaceNames')], '-Nic')]"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "name": "[parameters('networkSecurityGroupName')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "RDP",
                        "properties": {
                        "protocol": "TCP",
                        "sourcePortRange": "*",
                        "destinationPortRange": "3389",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 300,
                        "direction": "Inbound",
                        "sourcePortRanges": [],
                        "destinationPortRanges": [],
                        "sourceAddressPrefixes": [],
                        "destinationAddressPrefixes": []
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "name": "[parameters('virtualNetworkName')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('subnetAddressPrefixes')]"
                }
            },
            "dependsOn": [
                "[parameters('networkSecurityGroupName')]"
            ]
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "copy": {
                "name": "subnetLoop",
                "mode": "Serial",
                "batchSize": 1,
                "count": "[variables('subnetCount')]"
            },
            "name": "[concat( parameters('virtualNetworkName'), '/', parameters('subnetNames')[copyIndex()])]",
            "properties": {
                "addressPrefix": "[parameters('subnetAddressPrefixes')[copyIndex()]]",
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                }
            },
            "dependsOn": [
                "[parameters('virtualNetworkName')]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "copy": {
                "name": "networkInterfaceLoop",
                "count": "[variables('virtualMachineCount')]"
            },
            "name": "[variables('networkInterfaceNames')[copyIndex()]]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig",
                        "properties": {
                            "subnet": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetNames')[copyIndex()])]",
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetNames')[copyIndex()])]"
            ]
        }
    ],
    "outputs": {
        "virtualNetworkResourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
        },
        "subnetResourceIds": {
            "type": "array",
            "copy": {
                "count": "[variables('subnetCount')]",
                "input": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetNames')[copyIndex()])]"
            }
        }    
    }
}